<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrincipal</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrincipal</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlackMate</item>
        <item name="colorAccent">@color/colorPrincipal</item>

    </style>

    <style name="UserMainTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlackMate</item>
        <item name="colorAccent">@color/colorPrincipal</item>


    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- cambiar color de texto del toolbar -->
        <item name="android:textColorPrimary">@color/colorBlackMate</item>

    </style>

    <style name="TextLayout_ped_tax" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>

    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dialog.fullscreen" parent="@style/Theme.AppCompat.Dialog">




    </style>


</resources>
