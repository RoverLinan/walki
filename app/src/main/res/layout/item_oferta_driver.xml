<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_oferta_driver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#B5B9B4"
    app:cardCornerRadius="13dp"
    android:translationZ="1dp"
    android:layout_marginBottom="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_photo_respuesta"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"
            android:src="@drawable/photo_user">

        </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/tv_nombredriver_respuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Michael"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#0A0A0A"
                android:textSize="14sp">

            </TextView>

            <TextView
                android:id="@+id/tv_scoredriver_respuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_start"
                android:drawablePadding="2dp"
                android:text="4.8(518)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#494848"
                android:textSize="10sp">

            </TextView>







        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/drawable_border_info_auto"
                android:orientation="vertical"
                android:padding="3dp"

                app:layout_constraintEnd_toStartOf="@+id/btn_decline_respuesta"
                app:layout_constraintHorizontal_bias="0.588"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_name_auto_respuesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:text="Volkswagen  -  Gol"
                    android:textColor="#4D4343">

                </TextView>

                <TextView
                    android:id="@+id/tv_placa_auto_respuesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/drawable_border_info_placa"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="T1G - 492"
                    android:textColor="@color/colorPrincipal"
                    android:textSize="12sp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrincipal"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Auto"
                android:textColor="#E81B0202"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/linearLayout5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.235">

            </TextView>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
                app:layout_constraintStart_toStartOf="@+id/linearLayout5"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5">


                <TextView
                    android:id="@+id/tv_min_respuesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:text="3 min">

                </TextView>

                <TextView
                    android:id="@+id/tv_dista_respuesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:text="800 m">

                </TextView>

                <TextView
                    android:id="@+id/tv_cash_respuesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PEN 15"
                    android:textColor="#D43636">

                </TextView>

            </LinearLayout>

            <Button
                android:id="@+id/btn_decline_respuesta"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_info_respuesta_driver"
                android:text="X"
                android:textColor="#504F4F"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </Button>

        </android.support.constraint.ConstraintLayout>


</LinearLayout>





</android.support.v7.widget.CardView>